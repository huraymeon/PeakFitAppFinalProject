<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER"
      prefHeight="640.0"
      prefWidth="420.0"
      spacing="25.0"
      style="-fx-background-color: linear-gradient(to bottom, #e0f7fa, #b2ebf2); -fx-background-radius: 20;"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.yourteam.app.peakfitappfinalproject.model.MainDashboardController">

   <padding>
      <Insets top="40.0" bottom="30.0" left="30.0" right="30.0"/>
   </padding>

   <children>
      <VBox alignment="CENTER" spacing="5.0">
         <Label text="PeakFit App">
            <font>
               <Font size="24.0"/>
            </font>
         </Label>
         <Label text="Your personalized fitness assistant" textFill="#555">
            <font>
               <Font size="13.0"/>
            </font>
         </Label>
      </VBox>

      <StackPane>
         <HBox alignment="CENTER" spacing="10.0">
            <Button fx:id="logWorkoutButton" text="Log Workout" onAction="#handleLogWorkout"
                    prefWidth="110"
                    style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-background-color: #ffffff;" />
            <Button fx:id="generateButton" text="Generate Workout" onAction="#handleGenerateWorkout"
                    prefWidth="150"
                    style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-background-color: #ffffff;" />
            <Button fx:id="viewHistoryButton" text="Workout History" onAction="#handleWorkoutHistory"
                    prefWidth="130"
                    style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-background-color: #ffffff;" />
         </HBox>
      </StackPane>

      <Button fx:id="exitButton" text="Exit" onAction="#handleExitButton"
              style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-background-color: #f8bbd0;"/>
   </children>
</VBox>
